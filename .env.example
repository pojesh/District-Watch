# DistrictWatch Configuration
# Copy this to .env and fill in your values

# =============================================================================
# TELEGRAM (Required)
# =============================================================================
# Get token from @BotFather on Telegram
TELEGRAM_TOKEN=your_bot_token_here

# Get chat ID from @userinfobot on Telegram
TELEGRAM_CHAT_ID=your_chat_id_here

# =============================================================================
# DEFAULT THEATERS (Applied to new movies)
# =============================================================================
# Format: NAME:PRIORITY:keyword1,keyword2;NAME2:PRIORITY:keywords
# Priority: 1 = highest, 5 = lowest
DEFAULT_THEATERS=Vettri:1:vettri;Rohini:1:rohini,rohini silver;AGS:1:ags;PVR:2:pvr,pvr cinemas;INOX:2:inox;SPI:2:spi,spi cinemas

# =============================================================================
# INITIAL MOVIE (Optional - can add via /add command instead)
# =============================================================================
# MOVIE_URL=https://www.district.in/movies/your-movie-url
# MOVIE_NAME=Movie Name
# CITY=Chennai

# =============================================================================
# TIMING
# =============================================================================
CHECK_INTERVAL=120
MIN_INTERVAL=30
MAX_INTERVAL=300

# =============================================================================
# BROWSER
# =============================================================================
HEADLESS=true

# =============================================================================
# RELIABILITY
# =============================================================================
MAX_RETRIES=3
RETRY_DELAY=5
REQUEST_TIMEOUT=60000
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=300

# =============================================================================
# PATHS
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/district-watch.log
DB_PATH=data/state.db
MOVIES_FILE=data/movies.json
